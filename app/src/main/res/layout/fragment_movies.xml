<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".presentation.movies.MoviesFragment">

    <com.example.tmdbclone.presentation.customViews.TitledRecyclerView
        android:id="@+id/trvPopularMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.tmdbclone.presentation.customViews.TitledRecyclerView
        android:id="@+id/trvPlaintInTheater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/trvPopularMovies" />

</androidx.constraintlayout.widget.ConstraintLayout>