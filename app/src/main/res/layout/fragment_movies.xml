<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".presentation.movies.MoviesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.tmdbclone.ui.customViews.TitledRecyclerView
            android:id="@+id/trvPopularMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.tmdbclone.ui.customViews.TitledRecyclerView
            android:id="@+id/trvPlayingInTheater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/trvPopularMovies" />

        <com.example.tmdbclone.ui.customViews.TitledRecyclerView
            android:id="@+id/trvTrendingMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/trvPlayingInTheater" />

        <com.example.tmdbclone.ui.customViews.TitledRecyclerView
            android:id="@+id/trvTopRatedMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/trvTrendingMovies" />

        <com.example.tmdbclone.ui.customViews.TitledRecyclerView
            android:id="@+id/trvUpcomingMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/trvTopRatedMovies" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>